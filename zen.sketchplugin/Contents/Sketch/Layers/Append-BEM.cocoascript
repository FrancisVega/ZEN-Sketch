// Append BEM
// @shortcut alt cmd r

var onRun = function(context) {
  @import '../sQuery/sQuery.js';

  $("%selected%").each(function(){

    var layer = $(this).getLayer();
    var B = /^[^__]*/g.exec(layer.parentGroup().name())[0];
    var EM = /__.*/g.exec(layer.name());
     if (EM) {
       layer.name = B+EM;
     } else {
       layer.name = B+"__"+layer.name();
     }

  });

}
