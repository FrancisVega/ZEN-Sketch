function writeFile(filename, the_string) {
  var path =[@"" stringByAppendingString: filename];
  var str = [@"" stringByAppendingString: the_string];
  str.dataUsingEncoding_(NSUTF8StringEncoding).writeToFile_atomically_(path, true)
}

